---
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const { base } = Astro;
console.log('Layout Base path:', base);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Custom wheel designs in seconds">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/rims/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gothic+A1:wght@400;600;700;800&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <link href="/rims/src/styles/globals.css" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-black text-white font-gothic tracking-tight antialiased">
    <div class="relative flex min-h-screen flex-col">
      <Navigation />
      <main class="flex-1 pt-24">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <slot />
        </div>
      </main>
      <footer class="border-t py-6 md:py-0">
        <div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
          <div class="flex flex-col items-center gap-4 px-8 md:flex-row md:gap-2 md:px-0">
            <a href="/rims/terms" class="text-sm hover:text-foreground/80">Terms</a>
            <a href="/rims/privacy" class="text-sm hover:text-foreground/80">Privacy</a>
            <a href="/rims/imprint" class="text-sm hover:text-foreground/80">Imprint</a>
          </div>
          <p class="text-center text-sm leading-loose text-muted-foreground md:text-left">
            2024 RimVision. All rights reserved.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #1c1c22; /* Dark grey with blue tint */
    --primary-darker: #16161b; /* Slightly darker for gradient */
    --footer-bg: #0a0a0c;
    --accent-color: #ff7043; /* Warm orange */
    --accent-hover: #ffab91; /* Soft peach */
    --accent-gradient: linear-gradient(135deg, #ff7043, #ffab91);
    --secondary-color: #f5f5f0; /* Vintage white */
    --secondary-hover: #e8e8e0; /* Slightly darker vintage white */
    --text-color: #ffffff;
    --shadow-soft: rgba(0, 0, 0, 0.1);
    --shadow-medium: rgba(0, 0, 0, 0.2);
    --shadow-hard: rgba(0, 0, 0, 0.4);
    --shadow-darker: rgba(0, 0, 0, 0.6);
    --primary-font: 'Dela Gothic One', system-ui;
    --secondary-font: 'Roboto', sans-serif;
    --gothic-font: 'Gothic A1', sans-serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--secondary-font);
    background: #000000;
    color-scheme: dark;
    color: var(--text-color);
    overflow-y: scroll;
    overscroll-behavior: none;
    position: relative;
  }

  html::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.15'/%3E%3C/svg%3E");
    background-size: 200px 200px;
    opacity: 0.5;
    mix-blend-mode: overlay;
    z-index: 1;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
    overscroll-behavior-y: none;
    background: linear-gradient(to bottom, var(--primary-color), var(--primary-darker));
    position: relative;
    z-index: 2;
    font-family: 'Gothic A1', sans-serif !important;
  }

  main {
    flex: 1;
    width: 100%;
  }

  footer {
    background: var(--footer-bg);
    padding: 2rem 0;
    margin-top: 4rem;
    border-top: 1px solid rgba(245, 245, 240, 0.03);
  }

  .footer-links {
    display: flex;
    gap: 2rem;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .footer-links a {
    color: rgba(245, 245, 240, 0.6);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--accent-color);
  }

  .copyright {
    text-align: center;
    color: rgba(245, 245, 240, 0.4);
    font-size: 0.85rem;
  }

  .neo-button {
    background-color: var(--accent-color);
    color: white;
    padding: 0.8rem 2rem;
    border: 3px solid black;
    box-shadow: 4px 4px 0 black;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
  }

  .neo-button:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 black;
  }

  a {
    color: var(--secondary-color);
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--accent-color);
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--gothic-font) !important;
    font-weight: 800 !important;
  }
</style>
