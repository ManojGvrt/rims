<style>
  .legal-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  h2 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: var(--secondary-color);
  }

  section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: rgba(245, 245, 240, 0.02);
    border: 1px solid rgba(245, 245, 240, 0.08);
    border-radius: 12px;
  }

  p {
    color: var(--secondary-color);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  br {
    content: "";
    display: block;
    margin: 0.5rem 0;
  }

  .last-updated {
    text-align: center;
    color: rgba(245, 245, 240, 0.4);
    font-size: 0.9rem;
    margin-top: 3rem;
  }

  @media (max-width: 768px) {
    .legal-container {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.25rem;
    }

    section {
      padding: 1rem;
    }
  }
</style>
