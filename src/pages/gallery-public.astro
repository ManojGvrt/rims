---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Gallery - WHEELS AI">
  <div class="gallery-container content-page">
    <div class="gallery-header">
      <h1>Gallery</h1>
      <p class="subtitle">Discover our latest wheel designs</p>
    </div>
    <div class="gallery-grid">
      {
        [
          { url: 'https://images.unsplash.com/photo-1611821064430-0d40291d0f0b', alt: 'Custom Wheel Design 1', title: 'Sport Design', description: 'Modern 5-spoke design' },
          { url: 'https://images.unsplash.com/photo-1532587459811-f057563d1936', alt: 'Custom Wheel Design 2', title: 'Luxury Style', description: 'Multi-spoke premium finish' },
          { url: 'https://images.unsplash.com/photo-1580273916550-e323be2ae537', alt: 'Custom Wheel Design 3', title: 'Racing Edge', description: 'Lightweight performance' },
          { url: 'https://images.unsplash.com/photo-1553440569-bcc63803a83d', alt: 'Custom Wheel Design 4', title: 'Classic Revival', description: 'Timeless design' },
          { url: 'https://images.unsplash.com/photo-1549317661-bd32c8ce0db2', alt: 'Custom Wheel Design 5', title: 'Urban Style', description: 'Contemporary aesthetic' },
          { url: 'https://images.unsplash.com/photo-1544829099-b9a0c07fad1a', alt: 'Custom Wheel Design 6', title: 'Future Tech', description: 'Next-gen design' },
        ].map((image) => (
          <div class="gallery-card">
            <div class="card-content">
              <img src={image.url} alt={image.alt} />
              <div class="card-overlay">
                <h3>{image.title}</h3>
                <p>{image.description}</p>
                <a href="/signup" class="neo-button primary">Try it Now</a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  .gallery-container {
    padding-top: calc(var(--content-top-padding) + 4rem);
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff 0%, var(--accent-color) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: var(--primary-font);
  }

  .subtitle {
    color: #aaa;
    font-size: 1.4rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .gallery-card {
    position: relative;
    background: rgba(28, 28, 34, 0.4);
    border: 1px solid rgba(245, 245, 240, 0.08);
    box-shadow: 
      0 4px 6px var(--shadow-soft),
      0 10px 15px var(--shadow-medium),
      0 20px 30px var(--shadow-hard);
    border-radius: 20px;
    overflow: hidden;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .gallery-card:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 6px 8px var(--shadow-soft),
      0 12px 20px var(--shadow-medium),
      0 25px 40px var(--shadow-hard);
  }

  .card-content {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .card-content img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    background: linear-gradient(
      to top,
      rgba(28, 28, 34, 0.95),
      rgba(28, 28, 34, 0.8) 60%,
      transparent
    );
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-card:hover .card-overlay {
    transform: translateY(0);
  }

  .gallery-card:hover img {
    transform: scale(1.05);
  }

  .card-overlay h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--secondary-color);
    font-family: var(--primary-font);
  }

  .card-overlay p {
    color: #aaa;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .neo-button {
    display: inline-block;
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    border: 3px solid black;
    box-shadow: 
      4px 4px 0 var(--shadow-darker),
      0 4px 6px var(--shadow-soft),
      0 8px 12px var(--shadow-medium);
    transition: all 0.2s ease;
    font-family: var(--primary-font);
    cursor: pointer;
  }

  .neo-button.primary {
    background: var(--accent-gradient);
    color: var(--primary-color);
    border-color: var(--primary-color);
    text-shadow: none;
  }

  .neo-button.primary:hover {
    background: var(--accent-hover);
    color: var(--primary-color);
    transform: translate(2px, 2px);
    box-shadow: 
      2px 2px 0 var(--shadow-darker),
      0 2px 4px var(--shadow-soft),
      0 4px 8px var(--shadow-medium);
  }

  @media (max-width: 768px) {
    .gallery-container {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .card-content img {
      height: 300px;
    }

    .card-overlay {
      transform: translateY(0);
      background: linear-gradient(
        to top,
        rgba(28, 28, 34, 0.95),
        rgba(28, 28, 34, 0.8) 80%
      );
    }

    .card-overlay h3 {
      font-size: 1.5rem;
    }

    .card-overlay p {
      font-size: 1rem;
    }
  }
</style>
