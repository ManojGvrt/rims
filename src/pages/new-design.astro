---
import Layout from '../layouts/Layout.astro';
import ImageUpload from '../components/designs/ImageUpload.astro';
import Button from '../components/Button.astro';
---

<Layout title="New Design - RIMS AI">
  <div class="design-container">
    <div class="design-header">
      <h1>New Design</h1>
      <p class="subtitle">Create your next wheel design</p>
    </div>

    <div class="design-content">
      <div class="design-form neo-card">
        <form>
          <div class="form-group">
            <label for="design-name">Design Name</label>
            <input type="text" id="design-name" name="design-name" placeholder="My Awesome Wheel Design" required />
          </div>

          <div class="form-group">
            <label>Car Image</label>
            <ImageUpload id="car-image" label="car image" required={true} />
          </div>

          <div class="form-group">
            <label>Rim Image (Optional)</label>
            <ImageUpload id="rim-image" label="rim image" />
          </div>

          <div class="form-group">
            <label for="size">Wheel Size</label>
            <select id="size" name="size" required>
              <option value="17">17"</option>
              <option value="18">18"</option>
              <option value="19">19"</option>
              <option value="20">20"</option>
              <option value="21">21"</option>
            </select>
          </div>

          <div class="credit-info">
            <div class="credit-text">
              <span class="credit-cost">5 Credits</span>
              <span class="credit-balance">80 Credits remaining</span>
            </div>
            <Button type="submit" variant="primary" size="large">Generate Design</Button>
          </div>
        </form>
      </div>

      <div class="preview-section neo-card">
        <h2>Preview</h2>
        <div class="preview-placeholder">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M12 5v14M5 12h14" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <p>Your design preview will appear here</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .design-container {
    padding-top: var(--content-top-padding);
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .design-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-family: var(--primary-font);
    color: var(--secondary-color);
    font-size: 3rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #fff 0%, var(--accent-color) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    color: var(--secondary-color);
    font-size: 1.2rem;
    opacity: 0.8;
  }

  .design-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .neo-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
  }

  .form-group {
    margin-bottom: 2rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--secondary-color);
    font-size: 1rem;
    font-weight: 500;
  }

  input[type="text"],
  select {
    width: 100%;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--secondary-color);
    font-size: 1rem;
  }

  input[type="text"]:focus,
  select:focus {
    outline: none;
    border-color: var(--accent-color);
  }

  .credit-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
  }

  .credit-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .credit-cost {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--secondary-color);
  }

  .credit-balance {
    font-size: 0.9rem;
    color: var(--secondary-color);
    opacity: 0.7;
  }

  .neo-button {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .neo-button.primary {
    background: var(--accent-color);
    color: var(--primary-color);
  }

  .neo-button:hover {
    transform: translateY(-1px);
  }

  .preview-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .preview-section h2 {
    color: var(--secondary-color);
    font-size: 1.5rem;
  }

  .preview-placeholder {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    min-height: 400px;
    border: 2px dashed rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--secondary-color);
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .design-container {
      padding: 2rem 1rem;
    }

    .design-content {
      grid-template-columns: 1fr;
    }

    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .neo-card {
      padding: 1.5rem;
    }

    .preview-placeholder {
      min-height: 300px;
    }
  }
</style>
