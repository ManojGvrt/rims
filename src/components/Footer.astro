---
const currentYear = new Date().getFullYear();

const links = {
  product: [
    { label: 'Features', href: '/features' },
    { label: 'Pricing', href: '/pricing' },
    { label: 'Gallery', href: '/gallery' },
    { label: 'Roadmap', href: '/roadmap' },
  ],
  resources: [
    { label: 'Documentation', href: '/docs' },
    { label: 'Blog', href: '/blog' },
    { label: 'Support', href: '/support' },
    { label: 'API', href: '/api' },
  ],
  company: [
    { label: 'About', href: '/about' },
    { label: 'Careers', href: '/careers' },
    { label: 'Contact', href: '/contact' },
    { label: 'Legal', href: '/legal' },
  ],
  social: [
    { label: 'Twitter', href: 'https://twitter.com/wheelsai', icon: 'twitter' },
    { label: 'GitHub', href: 'https://github.com/wheelsai', icon: 'github' },
    { label: 'Discord', href: 'https://discord.gg/wheelsai', icon: 'discord' },
  ],
};
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-brand">
      <div class="logo">
        <img src="/logo.svg" alt="WHEELS AI" width="40" height="40" />
        <span>WHEELS AI</span>
      </div>
      <p class="tagline">
        Transform your wheels with AI-powered design
      </p>
      <div class="social-links">
        {links.social.map(link => (
          <a href={link.href} class="social-link" target="_blank" rel="noopener noreferrer">
            <span class="sr-only">{link.label}</span>
            <img src={`/icons/${link.icon}.svg`} alt={link.label} width="24" height="24" />
          </a>
        ))}
      </div>
    </div>

    <nav class="footer-links">
      <div class="link-group">
        <h3>Product</h3>
        <ul>
          {links.product.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="link-group">
        <h3>Resources</h3>
        <ul>
          {links.resources.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="link-group">
        <h3>Company</h3>
        <ul>
          {links.company.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    </nav>
  </div>

  <div class="footer-bottom">
    <p>&copy; {currentYear} WHEELS AI. All rights reserved.</p>
    <div class="legal-links">
      <a href="/privacy">Privacy Policy</a>
      <span class="separator">â€¢</span>
      <a href="/terms">Terms of Service</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--primary-color);
    border-top: 1px solid rgba(245, 245, 240, 0.1);
    padding: 4rem 2rem 2rem;
    color: var(--secondary-color);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.5rem;
    font-weight: bold;
    font-family: var(--primary-font);
  }

  .tagline {
    font-size: 1.1rem;
    color: #aaa;
    margin: 0;
    max-width: 300px;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 2px solid rgba(245, 245, 240, 0.1);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    border-color: var(--accent-color);
    transform: translateY(-2px);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .link-group h3 {
    font-size: 1.1rem;
    margin: 0 0 1.5rem;
    color: var(--accent-color);
  }

  .link-group ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .link-group a {
    color: #aaa;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .link-group a:hover {
    color: var(--secondary-color);
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid rgba(245, 245, 240, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    color: #aaa;
  }

  .legal-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .legal-links a {
    color: #aaa;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .legal-links a:hover {
    color: var(--secondary-color);
  }

  .separator {
    color: rgba(245, 245, 240, 0.1);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-brand {
      text-align: center;
      align-items: center;
    }

    .tagline {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 1rem 1.5rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
