---
const { base } = Astro;

const navItems = [
  { label: 'Home', href: `main/` },
  { label: 'Gallery', href: `main/gallery-public` },
  { label: 'Pricing', href: `main/pricing` }
];
---

<header class="fixed top-0 left-0 w-screen z-50">
  <div class="absolute inset-0 bg-gradient-to-b from-black/20 to-transparent pointer-events-none"></div>
  
  <nav class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2">
    <div class="relative flex items-center justify-between h-16">
      <!-- Logo Section -->
      <div class="flex-shrink-0">
        <a href={`${base}/`} class="group inline-flex items-center">
          <div class="px-3 py-1.5 bg-white text-black border-2 border-black rounded-md shadow-[3px_3px_0px_rgba(0,0,0,1)] transition-all group-hover:translate-x-[1px] group-hover:translate-y-[1px] group-hover:shadow-[2px_2px_0px_rgba(0,0,0,1)]">
            <span class="font-gothic text-lg font-bold tracking-tight">RIMS AI</span>
          </div>
        </a>
      </div>

      <!-- Navigation and Action Items -->
      <div class="flex items-center space-x-6">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="px-3 py-1.5 text-sm font-medium text-white/70 hover:text-white transition-colors relative 
                   rounded-md hover:bg-white/10 group"
          >
            <span class="relative z-10">{item.label}</span>
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-white scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
          </a>
        ))}
        
        <div class="flex items-center space-x-4">
          <a 
            href={`${base}/login`}
            class="px-3 py-1.5 text-sm font-medium text-white/70 hover:text-white transition-colors 
                   rounded-md hover:bg-white/10"
          >
            Log in
          </a>
          <a 
            href={`${base}/signup`}
            class="neo-button primary"
          >
            <span class="relative z-10">Start Free Trial</span>
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    backdrop-filter: blur(10px);
    width: 100vw;
    max-width: 100%;
  }
</style>