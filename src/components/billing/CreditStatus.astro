---
import Button from '../Button.astro';

interface Props {
  credits: number;
}

const { credits } = Astro.props;
---

<div class="credit-status neo-card">
  <div class="credit-balance">
    <h2>Credit Balance</h2>
    <div class="balance-amount">
      <span class="amount">{credits}</span>
      <span class="label">Credits</span>
    </div>
  </div>
  <Button variant="primary" size="large">Get More Credits</Button>
</div>

<style>
  .credit-status {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem;
  }

  h2 {
    font-family: var(--primary-font);
    color: var(--secondary-color);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .credit-balance {
    display: flex;
    flex-direction: column;
  }

  .balance-amount {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .amount {
    font-size: 3rem;
    font-weight: bold;
    color: var(--accent-color);
  }

  .label {
    font-size: 1.2rem;
    color: var(--secondary-color);
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .credit-status {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }

    .credit-balance {
      align-items: center;
    }
  }
</style>
