---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="billing-header">
  <h1>{title}</h1>
  <p class="subtitle">{subtitle}</p>
</div>

<style>
  .billing-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  h1 {
    font-family: var(--primary-font);
    color: var(--secondary-color);
    font-size: 3.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff 0%, var(--accent-color) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    color: var(--secondary-color);
    opacity: 0.8;
    font-size: 1.4rem;
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .billing-header {
      margin-bottom: 2rem;
    }

    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }
  }
</style>
