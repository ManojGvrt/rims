---
interface Props {
  src: string;
  alt: string;
  title: string;
  aspectRatio?: string;
  loading?: "lazy" | "eager";
}

const { 
  src, 
  alt, 
  title, 
  aspectRatio = "4/3",
  loading = "lazy" 
} = Astro.props;
---

<div class="gallery-image-container">
  <div class="image-wrapper" style={`aspect-ratio: ${aspectRatio};`}>
    <img 
      src={src} 
      alt={alt}
      loading={loading}
      class="gallery-image"
    />
  </div>
  {title && <h3 class="image-title">{title}</h3>}
</div>

<style>
  .gallery-image-container {
    position: relative;
    width: 100%;
    background: var(--primary-color);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
  }

  .gallery-image-container:hover {
    transform: translateY(-4px);
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-image-container:hover .gallery-image {
    transform: scale(1.05);
  }

  .image-title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: var(--secondary-color);
    font-size: 1.1rem;
    font-weight: 500;
    margin: 0;
  }
</style>
